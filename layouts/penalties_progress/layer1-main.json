{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            {               
                "BlockType": "component",
                "Component": "header_block",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header": "Season progress",
                        "headerFontSize" : 60,
                        "subHeader": "Penalty Points"
                    }
                }               
            },
            {
                "BlockType" : "component",
                "Component" : "separator"
            },
            {
                "BlockType" : "stack",
                "Orientation" : "Horizontal",
                "HorizontalAlignment" : "Center",
                "Margin" : "{MarginTable}",
                "Items" : [
                    {
                        "BlockType": "stack",
                        "Orientation": "Vertical",
                        "RenderIf" : "{DisplayPodiumCards}",
                        "MarginRight" : 15,
                        "Items" : [
                            {
                                "Name" : "PodiumHeaderImage",
                                "BlockType": "image",
                                "Source" : "podium.png",
                                "HorizontalAlignment" : "Center",
                                "MarginTop" : 25,
                                "Width" : 250
                            },
                            {
                                "BlockType" : "itemstack",
                                "Orientation" : "Vertical",
                                "MarginTop" : 10,
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Drivers}",
                                    "OrderByDescending": "PenaltyPoints",
                                    "Limit" : 3,
                                    "ItemTemplate": {
                                        "BlockType" : "component",
                                        "Component" : "card_universal",
                                        "ComponentOptions" : {
                                            "Vars" : {
                                                "platebg" : "plates/plate_bg_{Item.Index, Converter=NumberAdd, Parameter=1}",
                                                "plateWidth" : "430",
                                                "plateHeight" : "560",
                                                "plateMargin" : "0,0,0,8",
                                                "cardWidth" : "374",
                                                "cardHeight" : "469",
                                                "cardMargin" : "28,8,28,64",
                                                "RacNoFontS" : "45",
                                                "RaceNoMargin" : "46,68,0,0",
                                                "PlatformHeight" : "44",
                                                "PlatformMargin" : "44,14,0,0",
                                                "FlagHeight" : "30",
                                                "FlagMargin" : "41,30,0,0",
                                                "RoleSize" : "40",
                                                "Suit" : "suit/{Item.Team.Name}_{Item.SeatPosition}.png",
                                                "SuitWidth" : "210",
                                                "SuitMargin" : "0,52,40,0",
                                                "DriverNameFontSize" : "26",
                                                "DriverNameMargin" : "0,10,0,0",
                                                "DriverNameMarginTopIfNoRoles":"33",
                                                "logosMargin" : "0,28,0,0",
                                                "LeagueLogoHeight" : "35",
                                                "LeagueLogoMargin" : "36,0,0,0",
                                                "LeagueLogoMarginNonF1" : "-44,0,0,0",
                                                "F1LogoHeight" : "30",
                                                "F1LogoMargin" : "0,0,104,0"
                                            }
                                        }
                                    }
                                }
                            
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "Orientation" : "Horizontal",
                        "Items" : [
                            {
                                "BlockType" : "stack",
                                "Orientation" : "Vertical",
                                "Items" : [
                                    {
                                        "Name": "mainTable",
                                        "BlockType": "table",
                                        "HorizontalAlignment" : "Center",
                                        "TableOptions": {
                                            "ItemsSource": "{Standings.Drivers}",
                                            "OrderByDescending": "PenaltyPoints",
                                            "RowSpacing": 13,
                                            "ColSpacing": 0,
                                            "HeaderTemplate": {
                                                "BlockType": "text",
                                                "MarginBottom": 8,
                                                "Style" : "tableColumnHeader"
                                            },
                                            "Columns": [
                                                {
                                                    "Header": "[Driver]",
                                                    "Template": {
                                                        "BlockType" : "component",
                                                        "Component" : "driver_line_pp_progress"   
                                                    }
                                                },                        
                                                {
                                                    "Header": "[{Season.LineupsBasedType}Team]",
                                                    "Template":
                                                    {
                                                        "BlockType" : "component",
                                                        "Component" : "team_line_pp_progress"                                
                                                    }
                                                },
                                                {
                                                    "Header": "[Points]",
                                                    "Template": {

                                                        "BlockType": "dock",
                                                        "Height" : 73,
                                                        "PaddingLeft" : 24,
                                                        "PaddingRight" : 24,
                                                        "BackgroundImage": "team_bg/gap_bg_{Item.Team.Name}.png",
                                                        "Triggers" : [
                                                            {
                                                                "Condition" : "{F1Mode, Converter=BoolReverse}",
                                                                "Property" : "BackgroundImage",
                                                                "Value" : "gap_bg.png"
                                                            },
                                                            {
                                                                "Condition" : "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                                                "Property" : "BackgroundImage",
                                                                "Value" : "gap_bg.png"
                                                            }
                                                        ],

                                                        "Items": [                                    
                                                            {
                                                                "BlockType": "text",
                                                                "Source": "{Item.PenaltyPoints}",
                                                                "HorizontalAlignment": "Right",
                                                                "VerticalAlignment": "Center",
                                                                "Foreground" : "#ffffff",
                                                                "FontName": "{FontNameBold}",
                                                                "FontSize": 45,
                                                                "Triggers" : [
                                                                    {
                                                                        "Condition" : "{F1Mode, Converter=BoolReverse}",
                                                                        "Setters" : [
                                                                            {
                                                                                "Property" : "Foreground",
                                                                                "Value" : "#000000"
                                                                            }
                                                                        ]
                                                                    },
                                                                    {
                                                                        "Condition" : "{Item.PenaltyPoints, Converter=NumberEquals, Parameter=0}",
                                                                        "Setters" : [
                                                                            {
                                                                                "Property" : "Foreground",
                                                                                "Value" : "#00000000"
                                                                            }
                                                                        ]
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                },
                                                {
                                                    "Header" : "[Events]",
                                                    "MarginLeft" : 20,
                                                    "Template":{
                                                        "BlockType" : "component",
                                                        "Component" : "standings_stat_cell",
                                                        "ComponentOptions":{
                                                            "Vars" : {
                                                                "width" : "114",
                                                                "bgimage" : "bg_end.png",
                                                                "source" : "{Item.EventsCount, Converter=NumberZeroToEmpty}",
                                                                "foregr" : "{StandingsPointsForeground}"
                                                            }
                                                        }
                                                    }
                                                },
                                                {
                                                    "MarginLeft" : 20,
                                                    "MultiColumnHeadersSource": "{Standings.Events}",
                                                    "MultiColumnItemsSource": "{Item.Events}",
                                                    "MultiColumnHeaderTemplate": {
                                                        "BlockType": "stack",
                                                        "Orientation": "Vertical",
                                                        "Spacing": 4,
                                                        "HorizontalAlignment": "Center",
                                                        "Items": [
                                                            {
                                                                "BlockType": "image",
                                                                "Source": "{Item.Track.Nation.LogoPath}",
                                                                "HorizontalAlignment": "Center",
                                                                "Height": 32
                                                            },
                                                            {
                                                                "BlockType": "text",
                                                                "MarginBottom": 8,
                                                                "HorizontalAlignment": "Center",
                                                                "Source": "{Item.Track.Nation.Code}",
                                                                "Style" : "tableColumnHeader"                                        
                                                            }
                                                        ]
                                                    },

                                                    "Template" : {
                                                    
                                                        "BlockType" : "dock",
                                                        "Width" : 80,
                                                        "Height" : 73,
                                                        "RenderIf" : "{Item.Event.WinnerString, Converter=EmptyObjectToFalse}",
                                                        "BackgroundImage" : "bg_position.png",
                                                        "Items" : [
                                                            {
                                                                "BlockType": "text",
                                                                "Source": "{Item.PenaltyPoints}",
                                                                "FontName" : "{FontNameBold}",
                                                                "FontSize" : 28,
                                                                "HorizontalAlignment" : "Center",
                                                                "VerticalAlignment" : "Bottom",
                                                                "PaddingBottom" : 30,
                                                                "TextOptions" : {
                                                                    "HorizontalAlignment":"Center",
                                                                    "Foreground" : "{StandingsPointsForeground}"
                                                                },
                                                                "Triggers": [
                                                                    {
                                                                        "Condition": "{Item.PenaltyPoints, Converter=StringEquals, Parameter=0}",
                                                                        "Setters": [
                                                                            {
                                                                                "Property": "Source",
                                                                                "Value": ""
                                                                            }
                                                                        ]
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
