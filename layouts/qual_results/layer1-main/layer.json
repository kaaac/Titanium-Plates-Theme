{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType" : "component",
                "ComponentName" : "header_block_session"
            },
            {
                "BlockType" : "component",
                "ComponentName" : "separator"
            },
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "Padding" : "45,0,45,20",
                "TableOptions": {
                    "ItemsSource": "{Session.Drivers}",
                    "RowSpacing": 13,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        {
                            "Header": "Driver",
                            "WidthStretch" : true,
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell_quali"                                
                            }
                        },
                        {
                            "Header": "Team",
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "team_line_cell_quali"                                
                            }
                        },
                        {
                            "Header": "[Interval]",
                            "Template": {
                                "Padding": "12, 0",
                                "BackgroundImage": "images/quali_bg/gap_bg_{Item.Team.Name}.png",
                                "Triggers" : [
                                    {
                                        "Condition" : "{F1Mode, Converter=BoolReverse}",
                                        "Property" : "BackgroundImage",
                                        "Value" : "images/gap_bg.png"
                                    },
                                    {
                                        "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=1}",
                                        "Property" : "BackgroundImage",
                                        "Value" : "images/quali_bg/gap_bg_purple.png"
                                    }
                                ],
                                "BlockType": "text",
                                "Source": "{Item.Time}",
                                "HorizontalAlignment": "Left",
                                "TextOptionsExtern" : "tableCellBold",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center",
                                    "Foreground" : "#ffffff"
                                }
                            }
                        },
                        {
                            "Header": "",
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "position_jump_cell"    
                            }
                        },
                        {
                            "Header": "[Penalties]",
                            "Template": { 
                                "BlockType": "dock",
                                "Padding": "12, 0",
                                "Width" : 161,
                                "Height" : 73,
                                "MarginLeft" : "{MarginLeftTableCell}",
                                "RenderIf" : "{Item.PenaltyTimeStringLeftPart, Converter=EmptyObjectToFalse}",
                                "BackgroundImage" : "images/data_bg/penalties_bg.png",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Bottom",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.PenaltyTimeStringLeftPart}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Bottom",
                                                "PaddingBottom" : 25,
                                                "TextOptions": {
                                                    "FontName": "{FontNameDefault}",
                                                    "FontSize": 30,
                                                    "Foreground": "#000000",
                                                    "HorizontalAlignment": "Center"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "[Fastest Lap]",
                            "Template": {
                                "BlockType": "dock",
                                "MarginLeft" : "{MarginLeftTableCell}",
                                "Width" : 237,
                                "BackgroundImage" : "images/data_bg/fastlap_bg.png",
                                "Triggers" : [
                                    {
                                        "Condition" : "{Item.IsRaceFastestLap}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "BackgroundImage",
                                                "Value" : "images/data_bg/fastlap_bg_purple.png"
                                            }
                                        ]
                                    }
                                ],
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Bottom",
                                        "Spacing": 8,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.FastestLapTime}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Bottom",
                                                "PaddingBottom" : 27,
                                                "TextOptions": {
                                                    "FontName": "{FontNameBold}",
                                                    "FontSize": 30,
                                                    "HorizontalAlignment": "Center",
                                                    "Foreground" : "#ffffff"
                                                }
                                            },
                                            {
                                                "BlockType": "image",
                                                "Source": "tyres_{Item.FastestLapTyres}.png",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "Height": 40
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "[Stints]",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentOptions" : {
                                    "ComponentName" : "stints_cell"
                                }
                            }
                        }
                    ]
                }
            },
        ]
    }
}