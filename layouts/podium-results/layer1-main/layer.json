                                        }
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "Orientation" : "Horizontal",
                        "HorizontalAlignment" : "Center",
                        "RenderIf" : "{IncludeTop10AtPodiumRender}",
                        "MarginTop" : 100,
                        "Items" : [
                            {
                                "BlockType" : "stack",
                                "Orientation" : "Vertical",
                                "Items" : [
                                    {
                                        "Name": "mainTable",
                                        "BlockType": "table",
                                        "TableOptions": {
                                            "ItemsSource": "{Session.Drivers}",
                                            "RowSpacing": 20,
                                            "ColSpacing": 0,
                                            "IndexStart" : 3,
                                            "Limit" : 10,
                                            "HeaderTemplate": {
                                                "BlockType": "text",
                                                "MarginBottom": 8,
                                                "TextOptionsExtern" : "tableColumnHeader"
                                            },
                                            "Columns": [
                                                {
                                                    "Header": "",
                                                    "WidthStretch" : true,
                                                    "Template":
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentOptions" : {
                                                            "ComponentName" : "driver_line_cell_session",
                                                            "Vars" : {
                                                                "renderpos" : "false"
                                                            }
                                                        }
                                                    }
                                                },
                                                {
                                                    "Header": "",
                                                    "Template":
                                                    {
                                                        "BlockType" : "component",
                                                        "ComponentName" : "team_line_cell_session"                                
                                                    }
                                                },
                                                {
                                                    "Header": "",
                                                    "Template": {
                                                        "Padding": "12, 0",
                                                        "BackgroundImage": "images/team_bg/gap_bg_{Item.Team.Name}.png",
                                                        "BlockType": "text",
                                                        "Source": "[{Item.PositionString}th]",
                                                        "HorizontalAlignment": "Left",
                                                        "TextOptionsExtern" : "tableCellBold",
                                                        "TextOptions": {
                                                            "HorizontalAlignment": "Center",
                                                            "Foreground" : "#ffffff"
                                                        },
                                                        "Triggers" : [
                                                            {
                                                                "Condition" : "{F1Mode, Converter=BoolReverse}",
                                                                "Setters" : [
                                                                    {
                                                                        "Property" : "BackgroundImage",
                                                                        "Value" : "images/gap_bg.png"
                                                                    },
                                                                    {
                                                                        "Property" : "Foreground",
                                                                        "Value" : "#000000"
                                                                    }
                                                                ]
                                                                
                                                            },
                                                            {
                                                                "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=1}",
                                                                "Setters" : [
                                                                    {
                                                                        "Property" : "BackgroundImage",
                                                                        "Value" : "images/podium_bg/gap_bg_gold.png"
                                                                    },
                                                                    {
                                                                        "Property" : "Foreground",
                                                                        "Value" : "#ffffff"
                                                                    }
                                                                ]
                                                                
                                                            },
                                                            {
                                                                "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=2}",
                                                                "Setters" : [
                                                                    {
                                                                        "Property" : "BackgroundImage",
                                                                        "Value" : "images/podium_bg/gap_bg_silver.png"
                                                                    },
                                                                    {
                                                                        "Property" : "Foreground",
                                                                        "Value" : "#ffffff"
                                                                    }
                                                                ]
                                                                
                                                            },
                                                            {
                                                                "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=3}",
                                                                "Setters" : [
                                                                    {
                                                                        "Property" : "BackgroundImage",
                                                                        "Value" : "images/podium_bg/gap_bg_copper.png"
                                                                    },
                                                                    {
                                                                        "Property" : "Foreground",
                                                                        "Value" : "#ffffff"
                                                                    }
                                                                ]
                                                                
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "BlockType" : "image",
                        "Width" : 1500,
                        "RenderIf" : "{IncludeTop10AtPodiumRender, Converter=BoolReverse}",
                        "ImageOptions" : {
                            "Path" : "images/plates/top_podium"
                        }
                    }
                ]
            },
            {
                "BlockType" : "stack",
                "Orientation" : "Horizontal",
                "HorizontalAlignment" : "Center",
                "MarginTop" : 30,
                "Items" : [
                    {
                        "Name": "footerBlock",
                        "BlockType": "dock",
                        "Orientation": "Horizontal",
                        "HorizontalAlignment" : "Center",
                        "Items": [
                            {
                                "BlockType" : "stack",
                                "Margin" : "8, 8, 8, 8",
                                "HorizontalAlignment" : "Center",
                                "Spacing" : 32,
                                "Items" :[
                                    {
                                        "BlockType" : "component",
                                        "Name" : "stickerFastestLap",
                                        "RenderIf" : "{Session.FastestLapDriver, Converter=EmptyObjectToFalse}",
                                        "ComponentOptions" :
                                        {
                                            "ComponentName" : "sticker_fl",
                                            "Vars" :
                                            {
                                                "bg" : "images/fastlap_bg.png",
                                                "header" : "[FASTEST LAP]",
                                                "main" : "{Session.FastestLapDriver.Name}",
                                                "data" : "{Session.FastestLapTime}",
                                                "tyre" : "images/tyres/tyres_{Session.FastestLapTyres}.png"
                                            }
                                        }
                                    },
                                
                                    {                       
                                        "BlockType" : "component",
                                        "RenderIf" : "{Session.DriverDayDriver, Converter=EmptyObjectToFalse}",
                                        "ComponentOptions" :
                                        {
                                            "ComponentName" : "sticker",
                                            "Vars" :
                                            {
                                                "bg" : "images/driveroftheday_bg.png",
                                                "header" : "[DRIVER OF THE DAY]",
                                                "main" : "",
                                                "data" : "{Session.DriverDayDriver.Name}"
                                            }
                                        }
                                    },
                                    {
                                        "BlockType" : "component",
                                        "Name" : "stickerCommentator",
                                        "RenderIf" : "{Streamer, Converter=EmptyObjectToFalse}",
                                        "ComponentOptions" :
                                        {
                                            "ComponentName" : "sticker_com",
                                            "Vars" :
                                            {
                                                "bg" : "images/commentator_bg.png",
                                                "header" : "[COMMENTATOR]",
                                                "streamer" : "{Streamer}",
                                                "secondcomm" : "{SecondCommentator}"
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
