                                                "F1LogoHeight" : "30",
                                                "F1LogoMargin" : "0,0,104,0"
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "BlockType" : "itemstack",
                                "HorizontalAlignment" : "Center",
                                "Orientation" : "Horizontal",
                                "MarginTop" : 105,
                                "ItemStackOptions": {
                                    "ItemSource": "{Session.Drivers}",
                                    "Limit" : 1,
                                    "IndexStart" : 2,
                                    "Template": {
                                        "BlockType" : "component",
                                        "ComponentOptions" : {
                                            "ComponentName" : "card_universal",
                                            "Vars" : {
                                                "platebg" : "images/plates/plate_bg_{Item.Position}_notext.png",
                                                "plateWidth" : "430",
