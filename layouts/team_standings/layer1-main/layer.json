{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",       
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "header_block",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header" : "Driver standings"
                    }
                }               
            },
            ////separator
            {
                "Name" : "separator",
                "BlockType": "image",
                "MarginTop": 0,
                "MarginLeft": 0,
                "MarginRight": 0,
                "MarginBottom": 5,
                "Width": "*",
                "Source": "images/separator.png"
            },
            {
                "Name": "mainTable",
                "BlockType": "table",
                "HorizontalAlignment" : "Center",
                //"Margin" : "{MarginTable}",
                //"MarginRight" : 200,
                "TableOptions": {
                    "ItemsSource": "{Standings.Teams}",
                    "RowSpacing": 16,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        {
                            "Header": "Team",
                            //"WidthStretch" : true,
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "team_line_cell_team_standings"                                
                            }
                        },
                   

                        //points
                        {
                            "Header": "[PTS]",
                            "MarginLeft" : 0,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 24,
                                "Height" : 73,
                                "BackgroundImage": "images/team_bg/gap_bg_{Item.Team.Name}.png",                            
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Right",
                                        "VerticalAlignment": "Center",
                                        "TextOptionsExtern": "positionNumber",
                                        "Foreground" : "{StandingsPointsForeground}",
                                        "FontName": "{FontNameBold}",
                                        "FontSize": 45,
                                    }
                                ],
                                "Triggers" :
                                [
                                    {
                                        "Condition" : "{F1Mode, Converter=BoolReverse}",
                                        "Property" : "BackgroundImage",
                                        "Value" : "images/gap_bg.png"
                                    },
                                    {
                                        "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=1}",
                                        "Property" : "BackgroundImage",
                                        "Value" : "images/podium_bg/gap_bg_gold.png"
                                    },
                                    {
                                        "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=2}",
                                        "Property" : "BackgroundImage",
                                        "Value" : "images/podium_bg/gap_bg_silver.png"
                                    },
                                    {
                                        "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=3}",
                                        "Property" : "BackgroundImage",
                                        "Value" : "images/podium_bg/gap_bg_copper.png"
                                    },
                                    {
                                        "Condition" : "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                        "Property" : "BackgroundImage",
                                        "Value" : "images/gap_bg.png"
                                    },
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForTeamsExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 24
                                    }
                                ]
                            }
                        },

                         //position_jump
                        // {
                        //    "Header": "",
                        //    "PaddingLeft" : 0,
                        //    "MarginLeft" : -4,
                        //    "Template":
                        //    {
                        //        "BlockType" : "component",
                        //        "PaddingLeft" : 0,                               
                        //        "PaddingRight" : 12,
                        //        "ComponentName" : "jump_cell"    
                        //    }
                        //},

                        //podiums
                        {
                            "Header" : "[Wins]",
                            "MarginLeft" : 20,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Source" : "{Item.CountP1, Converter=NumberZeroToEmpty}",
                                "TextOptionsExtern" : "positionNumber"
                            }
                        },
                        {
                            "Header" : "[2nd]",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Source" : "{Item.CountP2, Converter=NumberZeroToEmpty}",
                                "TextOptionsExtern" : "positionNumber"
                            }
                        },
                        {
                            "Header" : "[3rd]",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Source" : "{Item.CountP3, Converter=NumberZeroToEmpty}",
                                "TextOptionsExtern" : "positionNumber"
                            }
                        },

                        //stats
                        {
                            "Header" : "[FL]",
                            "MarginLeft" : 12,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Source" : "{Item.RaceFastestLapCount, Converter=NumberZeroToEmpty}",
                                "TextOptionsExtern" : "positionNumber"
                            }
                        },
                        {
                            "Header" : "[Poles]",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Source" : "{Item.CountQualP1, Converter=NumberZeroToEmpty}",
                                "TextOptionsExtern" : "positionNumber"
                            }
                        },                        

                        //events
                        {
                            "Header" : "[Events]",
                            "MarginLeft" : 12,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Source" : "{Item.EventsCount, Converter=NumberZeroToEmpty}",                                
                                "TextOptionsExtern" : "positionNumber",
                                "MarginRight":30
                            }
                        }


                    ]
                }
            }
        ]
    }
}