{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",       
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType" : "component",
                "ComponentName" : "header_block_session"
            },
            {
                "Name" : "separator",
                "BlockType": "image",
                "MarginTop": 0,
                "MarginLeft": 0,
                "MarginRight": 0,
                "MarginBottom": 5,
                "Width": "*",
                "Source": "images/separator.png"
            },
            {
                "BlockType": "stack",
                "Orientation" : "Horizontal",
                "Items" : [
                    {
                        "BlockType" : "stack",
                        "Orientation" : "Vertical",
                        "RenderIf" : "{DisplayPodiumCards}",
                        "Items" : [
                            {
                                "BlockType" : "image",
                                "Source" : "images/podium.png",
                                "MarginTop" : 40,
                                "Width" : 350
                            },
                            {
                                "BlockType" : "itemstack",
                                "Orientation" : "Vertical",
                                "ItemStackOptions": {
                                    "ItemSource": "{Session.Drivers}",
                                    "Limit" : 3,
                                    "Template": {
                                        "BlockType" : "image",
                                        "Source" : "images/cards/card_Herox16.png",
                                        "BackgroundImage" : "images/cards/plate_bg_{Item.PositionString}.png",
                                        "Padding" : "30, 0, 30, 45",
                                        "Margin" : "10, 10, 10, 10",
                                        "HorizontalAlignment" : "Center",
                                        "Width" : 250,
                                        "ImageOptions":
                                        {
                                            "HorizontalAlignment" : "Center"
                                        }
                                        
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "BlockType" : "stack",
                        "Orientation" : "Vertical",
                        "Items" : [
                            {
                                "Name": "mainTable",
                                "BlockType": "table",
                                "Margin" : "{MarginTable}",
                                "Padding" : "45,0,45,20",
                                "TableOptions": {
                                    "ItemsSource": "{Session.Drivers}",
                                    "RowSpacing": 13,
                                    "ColSpacing": 0,
                                    "HeaderTemplate": {
                                        "BlockType": "text",
                                        "MarginBottom": 8,
                                        "TextOptionsExtern" : "tableColumnHeader"
                                    },
                                    "Columns": [
                                        {
                                            "Header": "Driver",
                                            "WidthStretch" : true,
                                            "Template":
                                            {
                                                "BlockType" : "component",
                                                "ComponentName" : "driver_line_stints"                                
                                            }
                                        },
                                        {
                                            "Header": "[Stints]",
                                            "Template":
                                            {
                                                "BlockType" : "stack",
                                                "Orientation" : "Vertical",
                                                "RenderIf" : "{Item.IsFinished}",
                                                "Width" : 2000,
                                                "Items" : [
                                                    {
                                                        "BlockType": "itemstack",
                                                        "Spacing": 0,
                                                        "MaxWidth" : "{Item.RaceDistancePercentage, Converter=NumberMultiply, Parameter=20}",
                                                        "ItemStackOptions": {
                                                            "ItemSource": "{Item.Stints}",
                                                            "Template": {
                                                                "BlockType" : "component",
                                                                "ComponentOptions" : {
                                                                    "ComponentName" : "stints_bar",
                                                                }
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            },
                            {
                                "Name": "footerBlock",
                                "BlockType": "dock",
                                "Orientation": "Horizontal",
                                "Items": [
                                    {
                                        "BlockType" : "stack",
                                        "Margin" : "8, 36, 8, 8",
                                        "HorizontalAlignment" : "Center",
                                        "Spacing" : 32,
                                        "Items" :[
                                            {
                                                "BlockType" : "component",
                                                "Name" : "stickerFastestLap",
                                                "RenderIf" : "{Session.FastestLapDriver, Converter=EmptyObjectToFalse}",
                                                "ComponentOptions" :
                                                {
                                                    "ComponentName" : "sticker_fl",
                                                    "Vars" :
                                                    {
                                                        "bg" : "images/fastlap_bg.png",
                                                        "header" : "FASTEST LAP",
                                                        "main" : "{Session.FastestLapDriver.Name}",
                                                        "data" : "{Session.FastestLapTime}",
                                                        "tyre" : "images/tyres/tyres_{Session.FastestLapTyres}.png"
                                                    }
                                                }
                                            },
                                        
                                            {                       
                                                "BlockType" : "component",
                                                "RenderIf" : "{Session.DriverDayDriver, Converter=EmptyObjectToFalse}",
                                                "ComponentOptions" :
                                                {
                                                    "ComponentName" : "sticker",
                                                    "Vars" :
                                                    {
                                                        "bg" : "images/driveroftheday_bg.png",
                                                        "header" : "DRIVER OF THE DAY",
                                                        "main" : "",
                                                        "data" : "{Session.DriverDayDriver.Name}"
                                                    }
                                                }
                                            },
                                            {
                                                "BlockType" : "component",
                                                "Name" : "stickerCommentator",
                                                "RenderIf" : "{Streamer, Converter=EmptyObjectToFalse}",
                                                "ComponentOptions" :
                                                {
                                                    "ComponentName" : "sticker_com",
                                                    "Vars" :
                                                    {
                                                        "bg" : "images/commentator_bg.png",
                                                        "header" : "COMMENTATOR",
                                                        "streamer" : "{Streamer}",
                                                        "secondcomm" : "{SecondCommentator}"
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
