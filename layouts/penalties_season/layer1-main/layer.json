{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        
        "Orientation": "Vertical",
        "Items": [
            {               
                "BlockType": "component",
                "ComponentName": "header_block",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header" : "Season penalties"
                    }
                }               
            },
            {
              "BlockType" : "component",
              "ComponentName" : "separator"
            },
            {
              "BlockType" : "stack",
              "Orientation" : "Horizontal",
              "HorizontalAlignment" : "Center",
              "Margin" : "{MarginTable}",
              "Items" : [
                {
                  "BlockType": "stack",
                  "Orientation" : "Horizontal",
                  "Items" : [
                      {
                          "BlockType" : "stack",
                          "Orientation" : "Vertical",
                          "Items" : [
                              {
                                  "Name": "mainTable",
                                  "BlockType": "table",
                                  "HorizontalAlignment" : "Center",
                                  "TableOptions": {
                                  "ItemsSource": "{Penalties.Drivers}",
                                  "OrderByDescending": "PenaltyPointsActive",
                                  "OrderByDescending2": "PenaltySeconds",
                                  "OrderByDescending3": "PenaltyIngameSeconds",
                                  "RowSpacing": 16,
                                  "HeaderTemplate": {
                                    "BlockType": "text",
                                    "MarginBottom": 8,
                                    "TextOptionsExtern": "tableColumnHeader"
                                  },
                                  "Columns": [
                                    {
                                      "Header": "[Driver]",
                                      "Template": {
                                          "BlockType" : "component",
                                          "ComponentName" : "driver_line_cell_session"   
                                      }
                                    },                        
                                    {
                                      "Header": "[Team]",
                                      "Template":
                                      {
                                          "BlockType" : "component",
                                          "ComponentName" : "team_line_cell_session"                                
                                      }
                                    },
                                    {
                                      "Header": "PPA",
                                      "Template": {
                                      
                                        "BlockType": "dock",
                                        "PaddingLeft": 24,
                                        "PaddingRight": 24,
                                        "Height" : 73,
                                        "MarginRight" : 20,
                                        "BackgroundImage": "images/team_bg/gap_bg_{Item.Team.Name}.png",
                                        "Triggers" : [
                                          {
                                              "Condition" : "{F1Mode, Converter=BoolReverse}",
                                              "Property" : "BackgroundImage",
                                              "Value" : "images/gap_bg.png"
                                          },
                                          {
                                              "Condition" : "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                              "Property" : "BackgroundImage",
                                              "Value" : "images/gap_bg.png"
                                          },
                                          {
                                              "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=1}",
                                              "Property" : "BackgroundImage",
                                              "Value" : "images/podium_bg/gap_bg_gold.png"
                                          },
                                          {
                                              "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=2}",
                                              "Property" : "BackgroundImage",
                                              "Value" : "images/podium_bg/gap_bg_silver.png"
                                          },
                                          {
                                              "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=3}",
                                              "Property" : "BackgroundImage",
                                              "Value" : "images/podium_bg/gap_bg_copper.png"
                                          }
                                        ],
                                        "Items": [
                                          {
                                            "BlockType": "text",
                                            "Source": "{Item.PenaltyPointsActive}",
                                            "HorizontalAlignment": "Right",
                                            "VerticalAlignment": "Center",
                                            "FontName": "{FontNameBold}",
                                            "Foreground": "#000000",
                                            "TextOptionsExtern": "primaryNumber",
                                            "Triggers" : [
                                              {
                                                "Condition" : "{Item.PenaltyPointsActive, Converter=NumberEquals, Parameter=0}",
                                                "Setters" : [
                                                  {
                                                    "Property" : "Foreground",
                                                    "Value" : "#00000000"
                                                  }
                                                ]
                                              }
                                            ]
                                          }
                                        ]
                                      }
                                    },
                                    
                                  
                                    {
                                      "Header": "WA",
                                      "Template": {
                                        "BlockType" : "component",
                                        "ComponentOptions":{
                                            "ComponentName" : "standings_stat_cell",
                                            "Vars" : {
                                                "width" : "94",
                                                "bgimage" : "images/bg_position.png",
                                                "source" : "{Item.PenaltyWarningsActive}",
                                                "cond" : "{Item.PenaltyWarningsActive, Converter=NumberLess, Parameter=1}",
                                                "foregr" : "{StandingsPointsForeground}"
                                            }
                                        
                                        }
                                      }
                                    },
                                  
                                    {
                                      "Header": "PTS",
                                      "Template": 
                                      {
                                        "BlockType" : "component",
                                        "ComponentOptions":{
                                            "ComponentName" : "standings_stat_cell",
                                            "Vars" : {
                                                "width" : "94",
                                                "bgimage" : "images/bg_position.png",
                                                "source" : "{Item.PenaltySeconds}",
                                                "cond" : "{Item.PenaltySeconds, Converter=NumberLess, Parameter=1}",
                                                "foregr" : "{StandingsPointsForeground}"
                                            }
                                        
                                        }
                                      }
                                    },
                                  
                                    {
                                      "Header": "PPS",
                                      "MarginLeft": 0,
                                      "Template": 
                                      {
                                        "BlockType" : "component",
                                        "ComponentOptions":{
                                            "ComponentName" : "standings_stat_cell",
                                            "Vars" : {
                                                "width" : "94",
                                                "bgimage" : "images/bg_position.png",
                                                "source" : "{Item.PenaltyPositions}",
                                                "cond" : "{Item.PenaltyPositions, Converter=NumberLess, Parameter=1}",
                                                "foregr" : "{StandingsPointsForeground}"
                                            }
                                        
                                        }
                                      }
                                    },
                                  
                                    {
                                      "Header": "PTG",
                                      "MarginLeft": 0,
                                      "Template": 
                                      {
                                        "BlockType" : "component",
                                        "ComponentOptions":{
                                            "ComponentName" : "standings_stat_cell",
                                            "Vars" : {
                                                "width" : "94",
                                                "bgimage" : "images/bg_position.png",
                                                "source" : "{Item.PenaltyIngameSeconds}",
                                                "cond" : "{Item.PenaltyIngameSeconds, Converter=NumberLess, Parameter=1}",
                                                "foregr" : "{StandingsPointsForeground}"
                                            }
                                        
                                        }
                                      }
                                    },
                                  
                                    {
                                      "Header": "PPO",
                                      "MarginLeft": 0,
                                      "Template": {
                                        "BlockType" : "component",
                                        "ComponentOptions":{
                                            "ComponentName" : "standings_stat_cell",
                                            "Vars" : {
                                                "width" : "94",
                                                "bgimage" : "images/bg_position.png",
                                                "source" : "{Item.PenaltyPointsOverall}",
                                                "cond" : "{Item.PenaltyPointsOverall, Converter=NumberLess, Parameter=1}",
                                                "foregr" : "{StandingsPointsForeground}"
                                            }
                                        
                                        }
                                      }
                                    },
                                  
                                    {
                                      "Header": "WO",
                                      "MarginLeft": 0,
                                      "Template": {
                                        "BlockType" : "component",
                                        "ComponentOptions":{
                                            "ComponentName" : "standings_stat_cell",
                                            "Vars" : {
                                                "width" : "94",
                                                "bgimage" : "images/bg_position.png",
                                                "source" : "{Item.PenaltyWarningsOverall}",
                                                "cond" : "{Item.PenaltyWarningsOverall, Converter=NumberLess, Parameter=1}",
                                                "foregr" : "{StandingsPointsForeground}"
                                            }
                                        
                                        }
                                      }
                                    }
                                  ]
                                }
                              },
                              {
                                "BlockType": "dock",
                                "Width": "*",
                                "Height": "*",
                                "Margin": "{MarginTable}",
                                "MarginTop" : 40,
                                "HorizontalAlignment" : "Center",
                                "Spacing": 0,
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Width": "1360",
                                        "Foreground": "{StandingsPointsForeground}",
                                        "HorizontalAlignment" : "Center",
                                        "Height": "*",
                                        "Source": "[PenaltiesLegend]",
                                        "TextOptions": {
                                            "FontSize": 40,
                                            "Wrap": true,
                                            "HorizontalAlignment": "Left"
                                        }
                                    }
                                ]
                              }
                          ]
                      }
                  ]
                }
              ]
            }
        ]
    }
}
