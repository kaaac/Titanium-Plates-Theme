                      {
                        "Condition" : "{F1Mode, Converter=BoolReverse}",
                        "Setters" : [
                          {
                            "Property" : "Source",
                            "Value" : "suit/Neutral.png"
                          }
                        ]
                      
                      },
                      {
                        "Condition": "{DriverInfo.Team.Name, Converter=EmptyObjectToTrue}",
                        "Setters" : [
                          {
                            "Property" : "Source",
                            "Value" : "suit/Neutral.png"
                          }
                        ]
                      },
                      {
                        "Condition" : "{UseDriverAvatars}",
