{
    "BlockType": "dock",
    "PaddingLeft": 12,
    "PaddingRight": 4,
    "BackgroundImage": "images/Driver.png",
    "Triggers" : [
        {
            "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=1}",
            "Property" : "BackgroundImage",
            "Value" : "images/quali_bg/driver_bg_purple.png"
        }
    ],
    "Height" : 73,
    "Width" : 631,
    "ColorizeBackground": {
        "Enabled": false,
        "Color": "#FFFF00",
        "BlendPercentage": 10
    },
    "Items": [
        {
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Bottom",
            "PaddingBottom" : 10,
            "Items": [
                 {
                    "BlockType": "text",
                    "MaxWidth": 90,
                    "MarginLeft": 0,
                    "Width" : 50,
                    "Source": "{Item.PositionString}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "TextOptionsExtern" : "tableCellBold",
                    "Triggers" : [{
                        "Condition" : "{Item.Position, Converter=NumberLess, Parameter=2}",
                        "Property" : "Foreground",
                        "Value" : "#ffffff"
                    }],
                    "TextOptions" : {
                        "HorizontalAlignment" : "Center"
                    }
                },
                {
                    "BlockType": "text",
                    "MaxWidth": 600,
                    "MarginLeft": 8,
                    "Source": "{Item.Driver.Name}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "TextOptionsExtern" : "tableCellBold",
                    "Triggers" : [{
                        "Condition" : "{Item.Position, Converter=NumberLess, Parameter=2}",
                        "Property" : "Foreground",
                        "Value" : "#ffffff"
                    }]
                },
                {
                    "BlockType": "image",
                    "Height": 30,
                    "MarginRight": 0,
                    "MarginLeft" : 5,
                    "VerticalAlignment": "Center",
                    "ImageOptions": {
                        "Path": "images/flags/flag_{Item.Driver.Nationality.Code}.png",
                        "VerticalAlignment": "Center"
                    }
                }
            ]
        }
    ]
}
