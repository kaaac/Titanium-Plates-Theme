{
    "BlockType": "stack",
    "Orientation": "Vertical",
    "Width" : 1122,
    "MarginBottom" : 30,
    "Padding" : "50,30,40,30",
    "BackgroundImage" : "images/pen/bg_report_base.png",
    "Triggers" : [
      {
        "Condition" : "{F1Mode}",
        "Property" : "BackgroundImage",
        "Value" : "images/pen/bg_report_<{Penalty.DriverSession.Team.Name}>.png"
      }  
    ],
    "Items": [
      {
        "BlockType" : "dock",
        "Orientation" : "Horizontal",
        //"MarginTop" : 25,
        //"MarginBottom" : 20,
        "Items" : [
            {
                "BlockType" : "text",
                "Foreground" : "{ForegroundWhite}",
                "FontSize" : 48,
                "MarginTop" : 10,
                "Source" : "<{Penalty.Driver.Name}>",
                "HorizontalAlignment" : "Left",
                "FontName": "{FontNameDefault}",
                
              },
              {
                "BlockType" : "stack",
                "Orientation" : "Horizontal",
                "HorizontalAlignment" :"Right",
                "Spacing" : 5,
                "Items" : [
                  //pp
                  {
                    "BlockType": "text",
                    "Source": "<{Penalty.PenaltyPoints, Converter=NumberToSignedString}> [PP]",
                    "RenderIf": "<{Penalty.PenaltyPoints, Converter=NumberIsNotZero}>",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameBold}",
                    "Foreground": "#A70708",
                    "BackgroundImage": "images/pen/bg_penalties.png",
                    "Padding": "35,20,35,35",
                    "FontSize": 32
                  },
                //no penalty
                  {
                    "BlockType": "text",//"text",
                    "BackgroundImage": "images/pen/bg_nfa.png",//"[nfa]",
                    "Source" : "[nfa]",
                    "Width" : 450,
                    "Height" : 93,
                    "RenderIf": "<{Penalty.IsNoPunishment}>",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    //"FontName": "{FontNameBold}",
                    "Foreground": "#45CE45",
                    //"BackgroundImage": "images/pen/bg_nfa.png",
                    //"Padding": "35,20,35,35",
                    "FontSize": 32,
                    "TextOptions" : {
                      "HorizontalAlignment" : "Center"
                    }
                  },
                          //warning
                  {
                    "BlockType": "text",
                    "Source": "[warn]",
                    "RenderIf": "<{Penalty.PenaltyWarnings, Converter=NumberIsNotZero}>",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameBold}",
                    "Foreground": "#CE4545",
                    "BackgroundImage": "images/pen/bg_penalties.png",
                    "Padding": "35,20,35,35",
                    "FontSize": 32
                  },
                  //pen. time
                  {
                    "BlockType": "text",
                    "Source": "<{Penalty.PenaltySeconds, Converter=NumberToSignedString}> [sec.]",
                    "RenderIf": "<{Penalty.PenaltySeconds, Converter=NumberIsNotZero}>",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameBold}",
                    "Foreground": "#824040",
                    "BackgroundImage": "images/pen/bg_penalties.png",
                    "Padding": "35,20,35,35",
                    "FontSize": 32
                  },
                  //pen. pos
                  {
                    "BlockType": "text",
                    "Source": "<{Penalty.PenaltyPositions, Converter=NumberToSignedString}> [pos.]",
                    "RenderIf": "<{Penalty.PenaltyPositions, Converter=NumberIsNotZero}>",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameBold}",
                    "Foreground": "#C07373",
                    "BackgroundImage": "images/pen/bg_penalties.png",
                    "Padding": "35,20,35,35",
                    "FontSize": 32
                  },
                  //cancelled
                  {
                    "BlockType": "text",
                    "Source": "[pen-cancelled]",
                    "MarginRight": 12,
                    "RenderIf": "<{Penalty.IsCancelled}>",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameBold}",
                    "Foreground": "#45CE45",
                    "BackgroundImage": "images/pen/bg_nfa.png",
                    "Padding": "35,20,35,35",
                    "FontSize": 32
                  },
                  //action
                  {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "BackgroundImage": "images/pen/bg_action.png",
                    "RenderIf": "<{Penalty.IsAction}>",
                    "Items": [
                      {
                        "BlockType": "text",
                        "Source": "<{Penalty.PenaltyActionString}>",
                        "HorizontalAlignment": "Left",
                        "VerticalAlignment": "Center",
                        "Padding": "35,20,35,35",
                        "FontName": "{FontNameBold}",
                        "Foreground": "#D53131",
                        "FontSize": 28
                      },
                    
                      //{
                      //  "BlockType": "text",
                      //  "MaxWidth": 600,
                      //  "Source": "(<{Penalty.PenaltyActionValue}>)",
                      //  "RenderIf": "<{Penalty.PenaltyActionValue, Converter=NumberIsNotZero}>",
                      //  "HorizontalAlignment": "Left",
                      //  "VerticalAlignment": "Center",
                      //  "FontName": "{FontNameBold}",
                      //  "Foreground": "#D53131",
                      //  "FontSize": 28
                      //}
                    ]
                  }
                ]
              },
          
        ]
      },
  
      {
        "BlockType" : "stack",
        "Orientation" : "Horizontal",
        "RenderIf" : "true",
        "MarginBottom" : 30,
        "Triggers" : [
            {
                "Condition" : "<{Penalty.Description, Converter=EmptyObjectToTrue}>",
                "Setters" : [
                    {
                        "Property" : "MarginBottom",
                        "Value" : "0",
                    },
                    {
                        "Property" : "RenderIf",
                        "Value" : "False"
                    }
                ]
            }
        ],
        "Items" : [
            {
                "BlockType" : "stack",
                "Orientation" : "Vertical",
                "Width" : "{MultiPenaltyLeftColumn}",
                "Items" : [
                    {
                        "BlockType" : "text",
                        "Source" : "[Details]:",
                        "FontSize" : "{MultiPenaltyFontSize}",
                        "Foreground" : "{MultiPenaltyTitle}"
                    },
                    {
                        "BlockType" : "stack",
                        "Orientation" : "Horizontal",
                        "Items" :[
                            {
                                "BlockType" : "text",
                                "Source" : "[LapShort]:",
                                "Width" : "{MultiPenaltyLeftColumnFirstPart}",
                                "FontSize" : "{MultiPenaltyFontSize}",
                                "Foreground" : "{MultiPenaltyTitle}"
                            },
                            {
                                "BlockType" : "text",
                                "Source" : "<{Penalty.Lap}>",
                                "FontSize" : "{MultiPenaltyFontSize}",
                                "Foreground" : "{ForegroundWhite}"
                            }
                        ]
                    },
                    {
                        "BlockType" : "stack",
                        "Orientation" : "Horizontal",
                        "RenderIf" : "<{Penalty.Turn, Converter=EmptyObjectToFalse}>",
                        "Items" : [
                            {
                                "BlockType" : "text",
                                "Source" : "[TurnShort]:",
                                "Width" : "{MultiPenaltyLeftColumnFirstPart}",
                                "FontSize" : "{MultiPenaltyFontSize}",
                                "Foreground" : "{MultiPenaltyTitle}"
                            },
                            {
                                "BlockType" : "text",
                                "Source" : "<{Penalty.Turn}>",
                                "FontSize" : "{MultiPenaltyFontSize}",
                                "Foreground" : "{ForegroundWhite}"
                            }
                        ]
                    }
                ]
            },
            {
                "BlockType" : "text",
                "Source" : "<{Penalty.Description}>",
                "FontSize" : "{MultiPenaltyFontSize}",
                "Foreground" : "{ForegroundWhite}",
                "Width" : "{MultiPenaltyRightColumn}",
                "TextOptions" : {
                    "Wrap" : true
                }
            }
        ]
      },
      {
        "BlockType" : "stack",
        "Orientation" : "Horizontal",
        "RenderIf" : "<{Penalty.DriversInvolvedString, Converter=EmptyObjectToFalse}>",
        "MarginBottom" : 30,
        "Items" : [
            {
                "BlockType" : "text",
                "Source" : "[Involved]:",
                "Width" : "{MultiPenaltyLeftColumn}",
                "FontSize" : "{MultiPenaltyFontSize}",
                "Foreground" : "{MultiPenaltyTitle}"
            },
            {
                "BlockType" : "text",
                "Source" : "<{Penalty.DriversInvolvedString}>",
                "FontSize" : "{MultiPenaltyFontSize}",
                "Foreground" : "{ForegroundGold}",
                "Width" : "{MultiPenaltyRightColumn}",
                "TextOptions" : {
                    "Wrap" : true
                }
            }
        ]
      },
      {
        "BlockType" : "stack",
        "Orientation" : "Horizontal",
        "RenderIf" : "<{Penalty.Verdict, Converter=EmptyObjectToFalse}>",
        "MarginBottom" : 30,
        "Items" : [
            {
                "BlockType" : "text",
                "Source" : "[Decision]:",
                "Width" : "{MultiPenaltyLeftColumn}",
                "FontSize" : "{MultiPenaltyFontSize}",
                "Foreground" : "{MultiPenaltyTitle}"
            },
            {
                "BlockType" : "text",
                "Source" : "<{Penalty.Verdict}>",
                "FontSize" : "{MultiPenaltyFontSize}",
                "Foreground" : "{ForegroundWhite}",
                "Width" : "{MultiPenaltyRightColumn}",
                "TextOptions" : {
                    "Wrap" : true
                }
            }
        ]
      }
    ]
  } 