{
    "ComponentName": "driver_line_grid",
    "BlockType": "dock",
    "RenderIf" : "<renderif>",
    "BackgroundImage": "grid/grid_{Item.Team.Name}.png",
    "Height" : 0,
    "Width" : 0,
    "MarginBottom" : 35,
    "Triggers" : [
        {
            "Condition" : "<renderif>",
            "Setters" : [
                {
                    "Property" : "Height",
                    "Value" : "73"
                },
                {
                    "Property" : "Width",
                    "Value" : "866"
                }
            ]
        },
        {
            "Condition" : "{F1Mode, Converter=BoolReverse}",
            "Property" : "BackgroundImage",
            "Value" : "grid/grid_neutral.png"
        }
    ],
    "Items": [
        {
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Bottom",
            "Items": [
                 {
                    "BlockType": "text",
                    "Width" : 175,
                    "Height" : 73,
                    "Source": "[{Item.PositionString}th]",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "Foreground" : "#ffffff",
                    "Style" : "tableCellBold",
                    "TextOptions" : {
                        "HorizontalAlignment" : "Center"
                    }
                },
                {
                    "BlockType": "text",
                    "MarginLeft": 35,
                    "Source": "{Item.Driver.Name}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Bottom",
                    "MarginBottom" : 10,
                    "Style" : "tableCellBold",
                    "Foreground" : "#ffffff",
                    "Triggers" : [
                        {
                            "Condition" : "{F1Mode, Converter=BoolReverse}",
                            "Property" : "Foreground",
                            "Value" : "#000000"
                        }
                    ]
                }
            ]
        },
        {
            "BlockType" : "image",
            "HorizontalAlignment" : "Right",
            "VerticalAlignment" : "Bottom",
            "Source" : "{Item.Team.LiveryPath}",
            "Height" : 62,
            "MarginRight" : 10,
            "Triggers" : [
                {
                    "Condition" : "{F1Mode, Converter=BoolReverse}",
                    "Property" : "Source",
                    "Value" : "{Item.Team.LogoPath}"
                }
            ]
        }
    ]
}
