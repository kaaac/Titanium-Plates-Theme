{
    "BlockType" : "stack",
    "BackgroundImage" : "<platebg>",
    "Width" : "<plateWidth>",
    "Height" : "<plateHeight>",
    "Margin" : "<plateMargin>",
    "Items" : [


        {
            "BlockType" : "dock",
            "Orientation" : "Vertical",
            "BackgroundImage" : "images/card_blank.png",
            "HorizontalAlignment" : "Center",
            "Margin" : "<cardMargin>",
            "Width" : "<cardWidth>",
            "Height" : "<cardHeight>",
            "Items" : [
                {
                    "BlockType" : "dock",
                    "Orientation" : "Horizontal",
                    "Items": [
                        {
                            "BlockType" : "stack",
                            "Orientation" : "Vertical",
                            "HorizontalAlignment" : "Left",
                            "Items" : [
                                {
                                    "BlockType" : "text",
                                    "Source" : "{Item.Driver.RaceNumber}",
                                    "Foreground" : "#ffffff",
                                    "FontName" : "{FontNameBold}",
                                    "FontSize" : "<RacNoFontS>",
                                    "Margin" : "<RaceNoMargin>",
                                    "TextOptions" : {
                                        "HorizontalAlignment" : "Center"
                                    },
                                    "Triggers" : [
                                        {
                                            "Condition" : "{Item.Driver.RaceNumber, Converter=NumberLess, Parameter=10}",
                                            "Property" : "Source",
                                            "Value" : "0{Item.Driver.RaceNumber}"
                                        }
                                    ]
                                },
                                {
                                    "BlockType" : "image",
                                    "Source" : "images/platform/platform_{Item.Driver.GamePlatform}.png",
                                    "Height" : "<PlatformHeight>",
                                    "Margin" : "<PlatformMargin>"
                                },
                                {
                                    "BlockType": "image",
                                    "Height": "<FlagHeight>",
                                    "Margin" : "<FlagMargin>",
                                    "VerticalAlignment": "Center",
                                    "ImageOptions": {
                                        "Path": "images/flags/flag_{Item.Driver.Nationality.Code}.png",
                                        "VerticalAlignment": "Center"
                                    }
                                }
                            ]
                        },
                        {
                            "BlockType" : "image",
                            "HorizontalAlignment" : "Right",
                            "Source" : "<Suit>",
                            "Width" : "<SuitWidth>",
                            "Margin" : "<SuitMargin>",
                            "Triggers" : [
                                {
                                    "Condition" : "{F1Mode, Converter=BoolReverse}",
                                    "Setters" : [
                                        {
                                            "Property" : "Source",
                                            "Value" : "images/suit/Neutral.png"
                                        }
                                    ]
                                
                                },
                                {
                                    "Condition" : "{UseDriverAvatars}",
                                    "Setters" : [
                                        {
                                            "Property" : "Source",
                                            "Value" : "{Item.Driver.LogoPath}"
                                        }
                                    ]
                                
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType" : "itemstack",
                    "Orientation" : "Horizontal",
                    "HorizontalAlignment" : "Center",
                    "MarginTop" : -60,
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Driver.LeagueRoles}",
                        "Limit" : 5,
                        "Template": {
                            "BlockType" : "image",
                            "Height" : "40",
                            "Width" : "40",
                            "MarginRight" : 8,
                            "MarginLeft" : 8,
                            "Source" : "images/roles/{Item.LeagueRoleBuiltIn}_role.png"
                        }
                    }
                    
                },
                {
                    "BlockType" : "text",
                    "Source" : "{Item.Driver.Name}",
                    "Foreground" : "#ffffff",
                    "FontName" : "{FontNameBold}",
                    "DriverNameFontSize" : "26",
                    "DriverNameMargin" : "0,12,0,0",
                    "FontSize" : "<DriverNameFontSize>",
                    "Margin" : "<DriverNameMargin>",
                    "HorizontalAlignment" : "Center",
                    "Triggers" : [
                        {
                            "Condition" : "{Item.Driver.LeagueRoles, Converter=EmptyObjectToFalse}",
                            "Property" : "MarginTop",
                            "Value" : "<DriverNameMarginTopIfNoRoles>"
                        }
                    ]
                },
                {
                    "BlockType" : "dock",
                    "Orientation" : "Horizontal",
                    "Margin" : "<logosMargin>",
                    "Items" : [
                        {
                            "BlockType" : "image",
                            "Source" : "{Season.LeagueInfo.LeagueLogo}",
                            "HorizontalAlignment" : "Left",
                            "Margin" : "<LeagueLogoMargin>",
                            "Height" : "<LeagueLogoHeight>",
                            "RenderIf" : true,
                            "Triggers" : [
                                {
                                    "Condition" : "{F1Mode, Converter=BoolReverse}",
                                    "Setters" : [
                                        {
                                            "Property" : "HorizontalAlignment",
                                            "Value" : "Center"
                                        },
                                        {
                                            "Property" : "Margin",
                                            "Value" : "<LeagueLogoMarginNonF1>"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "BlockType" : "image",
                            "Source": "images/f1_logo.png",
                            "HorizontalAlignment" : "Right",
                            "RenderIf" : "{F1Mode}",
                            "Margin" : "<F1LogoMargin>",
                            "Height" : "<F1LogoHeight>"
                        }
                    ]
                }
            ]
        }        
    ],
    "Triggers" : [
        {
            "Condition" : "{Item.Position, Converter=StringEquals, Parameter=3}",
            "Property" : "MarginBottom",
            "Value" : "0"
        }
    ]
}