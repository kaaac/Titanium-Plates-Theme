{
    "BlockType": "dock",
    "PaddingLeft": 12,
    "PaddingRight": 4,    
    "BackgroundImage": "images/team_bg/team_bg_{Item.Team.Name}.png",
    "Triggers" : [
        {
            "Condition" : "{F1Mode, Converter=BoolReverse}",
            "Property" : "BackgroundImage",
            "Value" : "images/Team.png"
        },
        {
            "Condition" : "{Item.Team.Name, Converter=EmptyObjectToTrue}",
            "Property" : "BackgroundImage",
            "Value" : "images/Team.png"
        },
        {
            "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=1}",
            "Property" : "BackgroundImage",
            "Value" : "images/podium_bg/team_bg_gold.png"
        },
        {
            "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=2}",
            "Property" : "BackgroundImage",
            "Value" : "images/podium_bg/team_bg_silver.png"
        },
        {
            "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=3}",
            "Property" : "BackgroundImage",
            "Value" : "images/podium_bg/team_bg_copper.png"
        }
    ],
    "UseBackgroundCrop" : false,
    "Height" : 73,
    "Width" : 512,
    "Items": [
        {
            "BlockType": "stack",                    
            "HorizontalAlignment": "Right",
            "VerticalAlignment": "Bottom",
            "Items": [
                {
                    "BlockType": "text",
                    "MaxWidth": 600,                    
                    "Source": "{Item.Team.Name}",
                    "VerticalAlignment": "Bottom",
                    "PaddingBottom": 20,
                    "TextOptionsExtern" : "tableCellDefault",
                    "Triggers" : [
                        {
                            "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=3}",
                            "Property" : "Foreground",
                            "Value" : "#ffffff"
                        },
                        {
                            "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=2}",
                            "Property" : "Foreground",
                            "Value" : "#ffffff"
                        },
                        {
                            "Condition" : "{Item.PositionString, Converter=StringEquals, Parameter=1}",
                            "Property" : "Foreground",
                            "Value" : "#ffffff"
                        },
                        {
                            "Condition" : "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                            "Property" : "Source",
                            "Value" : "Reserve"
                        }
                    ],
                    "TextOptions": {
                        "HorizontalAlignment": "Right"
                    }
                }
            ]
        },
        {
            "BlockType": "stack",           
            "MarginRight": 16,
            "HorizontalAlignment": "Right",
            "VerticalAlignment": "Bottom",
            "Items": [
                {
                    "BlockType": "image",
                    "Source" : "images/cars/{Item.Team.Name}.png",
                    "MarginLeft" : 12,
                    "Height": 73,
                    "PaddingBottom" : -5,
                    "MarginRight": 20,
                    "VerticalAlignment": "Bottom",
                    "ImageOptions": {
                        "VerticalAlignment": "Center",
                        
                    },
                    "Triggers" : [
                        {
                            "Condition" : "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                            "Property" : "Source",
                            "Value" : "images/cars/Riserve.png"
                        },
                        {
                            "Condition" : "{F1Mode, Converter=BoolReverse}",
                            "Property" : "Source",
                            "Value" : "{Item.Team.LogoPath}"
                        }
                    ]
                }
            ]
        }
    ]
}
