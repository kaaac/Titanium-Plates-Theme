{
    "ComponentName" : "grid_main",
    "Name": "mainStack",
    "BlockType": "stack",
    "Margin": "{MarginRoot}",
    "Orientation": "Vertical",
    "Items": [
        {
            "BlockType" : "component",
            "Component" : "header_block_session"
        },
        {
            "BlockType" : "component",
            "Component" : "separator"
        },
        {
            "BlockType" : "stack",
            "Orientation" : "Horizontal",
            "HorizontalAlignment" : "Center",
            "Items" : [
                {
                    "BlockType" : "stack",
                    "Orientation" : "Horizontal",
                    "HorizontalAlignment" : "Center",
                    "Margin" : "{MarginTable}",
                    "Items" : [
                        {
                            "BlockType" : "image",
                            "Source" : "grid/thegrid.png",
                            "MarginRight" : 40,
                            "Height" : "{Session.DriversCount, Converter=NumberMultiply, Parameter=58}"
                        },
                        {
                            "BlockType" : "image",
                            "Source" : "grid/track_{Session.Track.CircuitName}.png",
                            "MarginRight" : 30,
                            "Height" : "{Session.DriversCount, Converter=NumberMultiply, Parameter=58}"
                        },
                        {
                            "BlockType": "stack",
                            "MarginTop" : 30,
                            "Orientation" : "Horizontal",
                            "Items" : [
                                {
                                    "BlockType" : "itemstack",
                                    "Orientation" : "Vertical",
                                    "ItemStackOptions" : {
                                        "ItemSource" : "{Session.Drivers}",
                                        "ItemTemplate": {
                                            "BlockType" : "component",
                                            "Component" : "driver_line_grid",
                                            "ComponentOptions" : {
                                                "Vars" : {
                                                    "renderif" : "{Item.Position, Converter=NumberIsOdd}"
                                                }
                                            }
                                        }
                                    }
                                }
                            ]    
                        },
                        {
                            "BlockType": "stack",
                            "Orientation" : "Vertical",
                            "MarginLeft" : 45,
                            "Items" : [
                                {
                                    "BlockType" : "text",
                                    "Source" : "Starting Grid",
                                    "FontSize" : 75,
                                    "Foreground" : "#ffffff",
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Center",
                                    "FontName" : "{FontNameBold}",
                                    "TextOptions" : {
                                        "HorizontalAlignment" : "Center"
                                    }
                                },
                                {
                                    "BlockType" : "itemstack",
                                    "Orientation" : "Vertical",
                                    "ItemStackOptions" : {
                                        "ItemSource" : "{Session.Drivers}",
                                        "ItemTemplate": {
                                            "BlockType" : "component",
                                            "Component" : "driver_line_grid",
                                            "ComponentOptions" : {
                                                "Vars" : {
                                                    "renderif" : "{Item.Position, Converter=NumberIsEven}"
                                                }
                                            }
                                        }
                                    }
                                }
                            ]    
                        }
                    ]
                }
            ]
        }
    ]
}