                    "Setters":
                    [                       
                        {
                            "Property" : "FontSize",
                            "Value" : "28"
                        }
                    ]                
                }                 
            ]          
        },
        
        //stints
        {
            "BlockType" : "dock",
    "Orientation" : "Horizontal",
    "BackgroundImage" : "{StatCellColumnBgImageStints}",
    "Width" : "*",
    "Height" : "*",
    "Spacing": 4,
    "Padding": "12, 0",
    "MarginLeft" : 15,
    "Items" : [
        {
            "BlockType": "itemstack",
            "HorizontalAlignment" : "Center",
            "VerticalAlignment" : "Center",
            //"BackgroundImage": "{StatCellColumnBgImageStints}", //"Background": "{BackgroundDefault}",
            "ItemStackOptions": {
                "ItemSource": "<{data.Stints}>",
                "Template": {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment" : "Center",
                    "MarginRight" : 4,
                    "Spacing": 3,
                    "Items": [
                        {
                            "BlockType": "image",
                            "Height": 36,
                            "VerticalAlignment": "Center",
                            "Source": "tyres_{Item.Tyres}.png"
                        },
                        {
                            "BlockType": "text",
                            "Source": "{Item.Laps}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "TextOptions": {
                                "FontName": "{FontNameDefault}",
                                "FontSize": 26,
                                "HorizontalAlignment": "Center",
                                "Foreground" : "#ffffff"
                            }
                            ,
                            "Triggers" : [
                                {
                                    "Condition" : "{Item.IsPercentage}",
                                    "Setters":
                                    [                        
                                        {
                                            "Property" : "Source",
                                            "Value" : "{Item.Percentage, Converter=StringAdd, Parameter=%}"
                                        }
                                    ]                
                                }                 
                            ]      
                        }
                        
                    ]
                }
            }
        },]
        },

        //tyres
        {
            "BlockType": "stack",
            "Padding" : "15,0",
            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",    
            "MarginLeft" : 15,        
            "Source": "<{data.Tyres, Converter=StringFormatReverse, Parameter=tyres_SUB.png}>",
            "VerticalAlignment" : "Center",
            "HorizontalAlignment": "Center",
            "BackgroundImage": "{StatCellColumnBgImageStints}",//"{BackgroundDefault}", 
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=Tyres}>",
                    "Setters":
                    [                        
                        {
                            "Property" : "RenderIf",
                            "Value" : true
                        }
                    ]                
                }                 
            ],           
            "Items":
            [
                {
                    "BlockType" : "image",                           
                    "Source": "<{data.Tyres, Converter=StringFormatReverse, Parameter=tyres_SUB.png}>",
                    "VerticalAlignment" : "Center",
                    "HorizontalAlignment": "Center",
                    "Height" : 38
                },
                {
                    "BlockType": "text",
                    "MarginLeft" : 4,
                    "Source": "<{data.Value}>",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "TextOptions": {
                        "FontName": "{FontNameDefault}",
                        "FontSize": 26,
                        "HorizontalAlignment": "Center",
                        "Foreground" : "{StatCellColumnForeground}"
                    }
                }
            ]                                       
        },
        { //battles pos and vs
            "BlockType" : "stack",
            "RenderIf" : false,
            "BackgroundImage" : "images/stats/battles/bg_position.png",
            "Width" : 45,
            "Height" : "*",
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=DriverCompact}>",
                    "Setters":
                    [                        
                        {
                            "Property" : "RenderIf",
                            "Value" : true
                        }
                    ]                
                },
                {
                    "Condition" : "<battle2>",
                    "Setters" : [
                        {
                            "Property" : "BackgroundImage",
                            "Value" : "images/stats/battles/bg_vs.png"
                        }
                    ]
                    
                }
            ],
            "Items":[
                {
                    "BlockType" : "text",
                    "Source": "{Item.Position}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment" : "Bottom",
                    "PaddingBottom" : 14,
                    "Width" : "*",
                    "Foreground" : "#000000",
                    "TextOptions" : {
                        "TextAlignment" : "Center",
                        "HorizontalAlignment": "Center",
                        "FontSize" : "26",
                        "FontName" : "{FontNameBold}"
                    },
                    "Triggers" : [
                        {
                            "Condition" : "<battle2>",
                            "Setters" : [
                                {
                                    "Property" : "Source",
                                    "Value" : "Vs"
                                },
                                {
                                    "Property" : "Foreground",
                                    "Value" : "#ffffff"
                                }
                            ]
                            
                        }
                    ],
                }
            ]
        },
        //driver short
        {           
            "BlockType" : "dock",
            "RenderIf" : false,
            "Width" : "300",
            "Height" : "*",           
            "Padding": "12, 0",
            "MarginLeft" : 0,
            "BackgroundImage": "images/stats/battles/battle_<{data.RawValue.TeamCarName}>.png",
            "VerticalAlignment" : "Center",               
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=DriverCompact}>",
                    "Setters":
                    [                        
