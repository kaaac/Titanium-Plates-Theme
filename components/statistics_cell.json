        //gap
        {            
            "BlockType" : "text",
            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",
            "Padding": "12, 0",
            "MarginLeft" : 15,
            "Background": "{BackgroundDefault}",
            "Source" : "<{data.Value}>",
            "HorizontalAlignment": "Left",
            "VerticalAlignment" : "Center",              
            "TextOptions": {
                "FontName": "{FontNameDefault}",
                "FontSize": 26,
                "HorizontalAlignment": "Center"
            },                   
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=Gap}>",
                    "Setters":
