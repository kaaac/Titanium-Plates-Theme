                    "Setters":
                    [                       
                        {
                            "Property" : "FontSize",
                            "Value" : "22"
                        }
                    ]                
                }    
            ]          
        },

        //number
        {            
            "BlockType" : "text",
            "RenderIf" : false,
            "Width" : "*",
            "MinWidth" : 100,
            "MarginLeft" : 15,
            "Height" : "*",
            "Padding": "12, 12",
            "BackgroundImage": "{StatCellColumnBgImage}",//{BackgroundDefault}",
            "Source" : "<{data.Value}>", //"<header>",
            "HorizontalAlignment": "Left",
            "VerticalAlignment" : "Bottom",              
            "TextOptions": {
                "FontName": "{FontNameDefault}",
                "FontSize": 26,
                "HorizontalAlignment": "Center",
                "Foreground" : "#ffffff"
            },                   
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=Number}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "RenderIf",
                            "Value" : true
                        }
                    ]                
                },                
                {
                    "Condition" : "<{data.IsHighlighted}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "Foreground",
                            "Value" : "{FastestLapQualSelectedForeground}"
                        }
                    ]                
                },
                {
                    "Condition" : "<{data.IsBig}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "FontSize",
                            "Value" : "32"
                        }
                    ]                
                },    
                {
                    "Condition" : "<{data.IsSmall}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "FontSize",
                            "Value" : "28"
                        }
                    ]                
                },{
                    "Condition" : "{<header>, Converter=StringEquals, Parameter=Top battles}",
                    "Setters" : [
                        {
                            "Property" : "BackgroundImage",
                            "Value" : "images/stats/battles/bg_laps.png"
                        },
                        {
                            "Property" : "Width",
                            "Value" : "120"
                        },
                        {
                            "Property" : "MarginLeft",
                            "Value" : "0"
