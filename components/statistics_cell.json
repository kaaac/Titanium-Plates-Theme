{
    "Name" : "statisticsCell",
    "BlockType" : "stack",    
    "VerticalAlignment" : "Center",   
    "Spacing" : 0,
    "Items" :
    [
        //time
        {            
            "BlockType" : "text",
            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",
            "Padding": "12, 0",
            "MarginLeft" : 15,
            "BackgroundImage": "{StatCellColumnBgImage}", //"Background": "{BackgroundDefault}",
            "Source" : "<{data.Value}>",
            "HorizontalAlignment": "Left",
            "VerticalAlignment" : "Center",              
            "TextOptions": {
                "FontName": "{FontNameDefault}",
                "FontSize": 26,
                "HorizontalAlignment": "Center",
                "Foreground" : "{StatCellColumnForeground}"
            },                   
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=Time}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "RenderIf",
                            "Value" : true
                        }
                    ]                
                },                
                {
                    "Condition" : "<{data.IsHighlighted}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "Foreground",
                            "Value" : "{FastestLapQualSelectedForeground}"
                        }
                    ]                
                },
                {
                    "Condition" : "<{data.IsBig}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "FontSize",
                            "Value" : "30"
                        }
                    ]                
                },    
                {
                    "Condition" : "<{data.IsSmall}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "FontSize",
                            "Value" : "22"
                        }
                    ]                
                }
            ]          
        },

        //string
        {            
            "BlockType" : "text",
            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",
            "Padding": "12, 0",
            "MarginLeft" : 15,
            "BackgroundImage": "{StatCellColumnBgImage}",//"{BackgroundDefault}",
            "Source" : "<{data.Value}>",
            "HorizontalAlignment": "Left",
