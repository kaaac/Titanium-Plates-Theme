                            "MarginLeft": 8,
                            "Source" : "<{data.RawValue.Name}>",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Bottom",
                            "FontName" : "{FontNameBold}",
                            "FontSize": 26,
                            "Foreground" : "#ffffff"
                            //"Triggers" : [
                            //    {
