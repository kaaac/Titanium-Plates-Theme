        //rating
        {           
            "BlockType" : "text",
            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",
            "Source" : "<{data.Value}>",
            "Padding": "12, 0",
            "MarginLeft" : 15,
            "BackgroundImage": "{StatCellColumnBgImageStints}",//"Background": "{BackgroundDefault}",
            "VerticalAlignment" : "Center",                  
            "TextOptions" :
            {
                "FontName": "{FontNameDefault}",
                "FontSize": 30,
                "HorizontalAlignment": "Center",
                "ColorizeRating" : 
                {
                    "IsEnabled" : true,
                    "Level" : "<{data.Level}>",
                    "GradientStops" : [
                        {
                            "Color" : "#A32DC8",
                            "Offset" : "100"
                        },
                        {
                            "Color" : "#A32DC8",
                            "Offset" : "84"
                        },
                        {
                            "Color" : "#45CE45",
                            "Offset" : "83"
                        },
                        {
                            "Color" : "#45CE45",
                            "Offset" : "75"
                        },
                        {
                            "Color" : "#FFFFFF",
                            "Offset" : "55"
                        },
                        {
                            "Color" : "#D90102",
                            "Offset" : "20"
                        },
                        {
                            "Color" : "#D90102",
                            "Offset" : "0"
                        }
                    ]
                }                
            },            
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=Rating}>",
                    "Setters":
                    [                        
                        {
                            "Property" : "RenderIf",
                            "Value" : true
                        }
                    ]                
