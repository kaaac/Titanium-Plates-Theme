                    "Items": [                        
                        {
                            "BlockType": "stack",
                            "VerticalAlignment": "Center",
                            "Spacing": 8,                            
                            "Items": [ 
                                ////logo
                                //{
                                //    "BlockType": "image",
                                //    "Height": 40,
                                //    "MarginRight": 0,
                                //    "VerticalAlignment": "Center",
                                //    "ImageOptions": {
                                //        "Path": "<{data.RawValue.TeamCarName}>",
                                //        "VerticalAlignment": "Center"
                                //    }
                                //}
                            ]
                        }
                    ]
                }
            ]          
        },
    ]
