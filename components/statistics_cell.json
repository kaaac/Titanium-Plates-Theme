                            "Property" : "Foreground",
                            "Value" : "#000000"
                        },
                        {
                            "Property" : "FontSize",
                            "Value" : "32"
                        },
                        {
                            "Property" : "FontName",
                            "Value" : "{FontNameBold}"
                        }
                    ]
                }
            ]          
        },

        //secondary number
        {            
            "BlockType" : "text",
            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",
            "MarginLeft" : 15,
            "Padding": "12, 0",
            "BackgroundImage": "{StatCellColumnBgImage}", //"Background": "{BackgroundDefault}",
            "Source" : "<{data.Value}>",
            "Foreground" : "#ffffff",
            "HorizontalAlignment": "Left",
            "VerticalAlignment" : "Center",              
            "TextOptions": {
                "FontName": "{FontNameDefault}",
                "FontSize": 30,
                "HorizontalAlignment": "Center"
            },                   
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=SecondaryNumber}>",
                    "Setters":
                    [                       
                        {
                            "Property" : "RenderIf",
                            "Value" : true
                        }
                    ]                
                },
                
                {
                    "Condition" : "<{data.IsHighlighted}>",
